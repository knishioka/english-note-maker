{
  "name": "english-note-maker",
  "version": "2.0.0",
  "description": "英語練習用の4本線ノート作成ウェブアプリ - TypeScript版（Production Ready）",
  "main": "dist/index.html",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "NODE_ENV=production tsc && vite build --mode production",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint . --ext .ts,.js --fix",
    "lint:check": "eslint . --ext .ts,.js",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,css,md}\"",
    "validate": "npm run typecheck && npm run lint:check && npm run test:run",
    "build:analyze": "vite build --mode analyze",
    "serve": "vite preview --port 3000",
    "clean": "rm -rf dist coverage test-results node_modules/.vite",
    "deps:update": "npm update && npm audit",
    "deps:audit": "npm audit --audit-level moderate",
    "debug:open": "echo 'Open browser and press Ctrl+Shift+D to open debug panel'",
    "debug:stats": "echo 'Call displayContentStats() in browser console'",
    "debug:layout": "echo 'Call window.testPDFLayout() in browser console'",
    "server:check": "curl -s -o /dev/null -w '%{http_code}' http://localhost:3000"
  },
  "keywords": [
    "english-learning",
    "handwriting-practice",
    "educational-tool",
    "print-optimization",
    "4-line-paper",
    "alphabet-practice",
    "children-education",
    "japanese-students",
    "typescript",
    "production-ready",
    "english",
    "handwriting",
    "notebook",
    "pdf",
    "education",
    "baseline",
    "print"
  ],
  "author": "Ken Nishioka",
  "license": "MIT",
  "homepage": "https://knishioka.github.io/english-note-maker/",
  "repository": {
    "type": "git",
    "url": "https://github.com/knishioka/english-note-maker.git"
  },
  "bugs": {
    "url": "https://github.com/knishioka/english-note-maker/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "http-server": "^14.1.1",
    "jsdom": "^23.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "puppeteer": "^24.10.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": ["> 1%", "last 2 versions", "not dead", "not ie 11"],
  "config": {
    "server": {
      "port": 3000,
      "host": "localhost"
    },
    "testing": {
      "browsers": ["chromium", "firefox", "webkit"],
      "headless": true,
      "timeout": 30000,
      "coverage": {
        "threshold": 80
      }
    },
    "debugging": {
      "logLevel": "debug",
      "enablePerformanceTracing": true,
      "enableVisualDebugging": true,
      "debugPanelShortcut": "Ctrl+Shift+D",
      "layoutTestShortcut": "Ctrl+Shift+T"
    },
    "build": {
      "target": "es2022",
      "minify": true,
      "sourcemap": true,
      "analyze": false
    }
  },
  "volta": {
    "node": "18.19.0",
    "npm": "10.2.0"
  }
}
