# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Package files
[*.{json,yml,yaml}]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,ts,tsx,jsx}]
indent_size = 2
max_line_length = 100

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2